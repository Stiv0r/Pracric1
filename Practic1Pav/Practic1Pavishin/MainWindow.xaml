        <Button Content="Решить" HorizontalAlignment="Left" Margin="64,31,0,0" Grid.Row="1" VerticalAlignment="Top" Width="248" Height="79" Click="Button_Click" FontSize="36"/>
        <TextBlock x:Name="otv" HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="100" Width="376" FontSize="22" Grid.Column="1"><Run Text="Ответ: "/><Run Text=" L="/><LineBreak/><Run Text="            S="/></TextBlock>
    </Grid>
</Window>
